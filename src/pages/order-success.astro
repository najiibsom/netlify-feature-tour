<style>
  .success-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem 0;
    text-align: center;
  }

  .success-content {
    background: var(--white);
    border-radius: 12px;
    padding: 3rem 2rem;
    box-shadow: var(--shadow);
  }

  .success-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .success-content h1 {
    color: var(--success);
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  .success-message {
    color: var(--gray);
    font-size: 1.1rem;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .order-info {
    background: var(--light-gray);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: left;
  }

  .order-detail {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .order-detail:last-child {
    margin-bottom: 0;
    padding-top: 0.5rem;
    border-top: 1px solid var(--border);
    font-weight: 600;
  }

  .next-steps {
    margin-bottom: 2rem;
  }

  .next-steps h3 {
    color: var(--black);
    margin-bottom: 1.5rem;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .step {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--light-gray);
    border-radius: 8px;
    text-align: left;
  }

  .step-number {
    width: 40px;
    height: 40px;
    background: var(--primary);
    color: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .step-content h4 {
    margin: 0 0 0.5rem 0;
    color: var(--black);
  }

  .step-content p {
    margin: 0;
    color: var(--gray);
    font-size: 0.9rem;
  }

  .contact-info {
    margin-bottom: 2rem;
  }

  .contact-info h3 {
    color: var(--black);
    margin-bottom: 1rem;
  }

  .contact-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-item {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    align-items: center;
  }

  .contact-item span {
    font-weight: 500;
    color: var(--black);
  }

  .contact-item a {
    color: var(--primary);
    text-decoration: none;
  }

  .contact-item a:hover {
    text-decoration: underline;
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .success-container {
      padding: 1rem;
    }

    .success-content {
      padding: 2rem 1rem;
    }

    .action-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }
  }
</style>

<script>
  // Load order details from localStorage
  function loadOrderDetails() {
    const orders = JSON.parse(localStorage.getItem('orders') || '[]');
    const latestOrder = orders[orders.length - 1];
    
    if (!latestOrder) {
      // If no order found, redirect to home
      window.location.href = '/';
      return;
    }
    
    const orderInfo = document.getElementById('order-info');
    orderInfo.innerHTML = `
      <div class="order-detail">
        <span>Order Number:</span>
        <span>#${latestOrder.id}</span>
      </div>
      <div class="order-detail">
        <span>Payment Method:</span>
        <span>${latestOrder.paymentMethod === 'mpesa' ? 'M-Pesa' : latestOrder.paymentMethod === 'cod' ? 'Cash on Delivery' : 'Card'}</span>
      </div>
      <div class="order-detail">
        <span>Items:</span>
        <span>${latestOrder.items.reduce((sum, item) => sum + item.quantity, 0)} items</span>
      </div>
      <div class="order-detail">
        <span>Total:</span>
        <span>${latestOrder.total}</span>
      </div>
    `;
  }

  // Download receipt
  function downloadReceipt() {
    const orders = JSON.parse(localStorage.getItem('orders') || '[]');
    const latestOrder = orders[orders.length - 1];
    
    if (!latestOrder) {
      alert('No order found');
      return;
    }
    
    // Create receipt content
    const receiptContent = `
SHOPLOCAL RECEIPT
================

Order #: ${latestOrder.id}
Date: ${new Date(latestOrder.date).toLocaleDateString()}
Payment: ${latestOrder.paymentMethod}

Items:
${latestOrder.items.map(item => `- ${item.title} x${item.quantity} - ${item.price}`).join('\n')}

Total: ${latestOrder.total}

Thank you for shopping with us!
Contact: +254 700 123 456
    `;
    
    // Create and download file
    const blob = new Blob([receiptContent], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `receipt-${latestOrder.id}.txt`;
    a.click();
    URL.revokeObjectURL(url);
  }

  // Initialize page
  document.addEventListener('DOMContentLoaded', loadOrderDetails);
</script>